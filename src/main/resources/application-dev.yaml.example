spring:
  datasource:
    url: jdbc:mysql://localhost:3306/accommodation?serverTimezone=UTC&characterEncoding=UTF-8
    username: {id}
    password: {pw}
    driver-class-name: com.mysql.cj.jdbc.Driver

  jpa:
    hibernate:
      ddl-auto: validate
    properties:
      hibernate:
        format_sql: true

